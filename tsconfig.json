{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "baseUrl": ".",
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "./dist",
        "types": [
            "@cloudflare/workers-types",
            "node"
        ]
    },
    "include": [
        "**/*.ts",
        "node/seed/index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "drizzle.config.ts"
    ]
}